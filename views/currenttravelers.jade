extends layout

block head
  title FRIB Traveler
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='#{prefix}/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet', href='#{prefix}/datatables/media/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='#{prefix}/font-awesome/css/font-awesome.css')
  link(rel='stylesheet', href='#{prefix}/stylesheets/style.css')

block content
  script(type='text/javascript').
    var device = !{JSON.stringify(device)};
    var prefix = '!{prefix}';
  .container-fluid
    #message
    h3 Travelers
      = ' '
      if (locals.device !== undefined && locals.device)
        | related to #{device}
      else
        | for all devices
    table#current-traveler-table.table.table-bordered.table-hover
block js
  script(type='text/javascript', src='#{prefix}/jquery/jquery.js')
  script(type='text/javascript', src='#{prefix}/datatables/media/js/jquery.dataTables.js')
  script(type='text/javascript', src='#{prefix}/bootstrap/dist/js/bootstrap.js')
  script(type='text/javascript', src='#{prefix}/datatables/media/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='#{prefix}/dependencies/jsonpath.js')
  script(type='text/javascript', src='#{prefix}/dependencies/moment.js')
  script(type='text/javascript', src='#{prefix}/javascripts/table.js')
  script(type='text/javascript', src='#{prefix}/javascripts/ajax-helper.js')
  script(type='text/javascript', src='#{prefix}/javascripts/currenttravelers.js')
