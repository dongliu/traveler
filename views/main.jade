extends layout

block head
  title FRIB Traveler
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/datatables/css/dataTables.bootstrap.css')
  link(rel='stylesheet', href='/font-awesome-4.0.3/css/font-awesome.css')
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container-fluid
    .btn-toolbar
      .btn-group
        a.btn.btn-primary#new(href='/forms/new', target='_blank')
          i.fa.fa-file-o.fa-lg
          | &nbsp;New Form
      .btn-group
        button.btn.btn-primary#reload
          i.fa.fa-refresh.fa-lg
          | &nbsp;Reload
      .btn-group.dropdown
        a#meta.btn.btn-info.dropdown-toggle(data-toggle='dropdown')
          i.fa.fa-gears.fa-lg
          | &nbsp;Meta
          span.caret
        ul.dropdown-menu
          li#devices
            a(href='/devices/', target='_blank') Devices
      .btn-group
        a.btn(href='/profile', target='_blank')
          i.fa.fa-user.fa-lg
          | &nbsp;Profile
      if (locals.roles !== undefined && locals.roles.indexOf('admin') !== -1)
        .btn-group
          a.btn(href='/users', target='_blank')
            i.fa.fa-users.fa-lg
            | &nbsp;Users
      .btn-group
        a.btn(href='/about', target='_blank')
          i.fa.fa-info.fa-lg
          |&nbsp;About
    #message
    #modal.modal.hide.fade(tabindex='-1',role='dialog',data-backdrop='static',aria-labelledby='modalLabel',aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
    .tabbable.tabs-left
      ul.nav.nav-tabs
        li.active
          a(href='#forms', data-toggle='tab') My forms
        li
          a(href='#sharedfroms', data-toggle='tab') Shared forms
        li
          a(href='#travelers', data-toggle='tab') My travelers
        li
          a(href='#sharedtravelers', data-toggle='tab') Shared travelers
        li
          a(href='#inittravelers', data-toggle='tab') Initial travelers
        li
          a(href='#activetravelers', data-toggle='tab') Active travelers
        li
          a(href='#completetravelers', data-toggle='tab') Complete travelers
        li
          a(href='#frozentravelers', data-toggle='tab') Frozen travelers
        li
          a(href='#archivedtravelers', data-toggle='tab') Archived travelers

      .tab-content
        #forms.tab-pane.active
          .btn-toolbar
            .btn-group
              button.btn.btn-primary#form-travel(data-toggle='tooltip', title='select ONE form and create a traveler')
                i.fa.fa-plane.fa-lg
                | &nbsp;Travel
            //- .btn-group
            //-   button.btn.btn-warning#form-delete
            //-     i.fa.fa-trash-o.fa-lg
            //-     | &nbsp;Delete
            .btn-group
              button.btn.btn-info#form-select-all
                i.fa.fa-list.fa-lg
                | &nbsp;Select all
            .btn-group
              button.btn.btn-info#form-select-none
                i.fa.fa-square-o.fa-lg
                | &nbsp;Clear selection
          table#form-table.table.table-bordered.table-hover
        #sharedfroms.tab-pane
          table#shared-form-table.table.table-bordered.table-hover
        #travelers.tab-pane
          .btn-toolbar
            .btn-group
              button.btn.btn-primary#archive(data-toggle='tooltip', title='archive selected travelers')
                i.fa.fa-archive.fa-lg
                | &nbsp;Archive
          table#traveler-table.table.table-bordered.table-hover
        #sharedtravelers.tab-pane
          table#shared-traveler-table.table.table-bordered.table-hover
        #inittravelers.tab-pane
          table#init-traveler-table.table.table-bordered.table-hover
        #activetravelers.tab-pane
          table#active-traveler-table.table.table-bordered.table-hover
        #completetravelers.tab-pane
          table#complete-traveler-table.table.table-bordered.table-hover
        #frozentravelers.tab-pane
          table#frozen-traveler-table.table.table-bordered.table-hover
        #archivedtravelers.tab-pane
          table#archived-traveler-table.table.table-bordered.table-hover


block js
  script(type='text/javascript', src='/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='/datatables/js/jquery.dataTables.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='/datatables/js/ZeroClipboard.js')
  script(type='text/javascript', src='/datatables/js/TableTools.js')
  script(type='text/javascript', src='/datatables/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/dependencies/moment.js')
  script(type='text/javascript', src='/javascripts/table.js')
  script(type='text/javascript', src='/javascripts/main.js')


