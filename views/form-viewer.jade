extends layout

block head
  meta(charset='urf-8')
  title FRIB - forms - #{id} - preview
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='#{prefix}/bootstrap/docs/assets/css/bootstrap.css')
  link(rel='stylesheet', href='#{prefix}/bootstrap/docs/assets/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='#{prefix}/font-awesome/css/font-awesome.css')
  link(rel='stylesheet', href='#{prefix}/stylesheets/style.css')

block content
  script.
    var prefix = '!{prefix}';
  .container
    .row
      .span9
        h3 #{title}
        .well-large
          form.form-horizontal#output
            != html
        #validation.well.hide
      .span3.sidebar
    .btn-group(data-toggle='buttons-radio')
      button.btn.btn-info#show-validation Show validation
      button.btn.btn-info#hide-validation.active Hide validation

block js
  script(type='text/javascript', src='#{prefix}/jquery/jquery.js')
  script(type='text/javascript', src='#{prefix}/bootstrap/docs/assets/js/bootstrap.js')
  script(type='text/javascript', src='#{prefix}/javascripts/form-viewer.js')
