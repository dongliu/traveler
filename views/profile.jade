extends layout

block head
  meta(charset='urf-8')
  title FRIB traveler - user profile
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='#{prefix}/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet', href='#{prefix}/jquery/ui-lightness/jquery-ui-1.10.2.custom.css')
  link(rel='stylesheet', href='#{prefix}/stylesheets/style.css')

block content
  .container(style="margin-top: 10px")
    #message
    #profile.well
      img(src="#{prefix}/adusers/#{user._id}/photo")
      dl
        dt Name
        dd #{user.name}
        dt Email
        dd #{user.email}
        dt Office
        dd #{user.office}
        dt Office phone
        dd #{user.phone}
        dt Mobile phone
        dd #{user.mobile}
        dt Last visited on
        dd #{user.lastVisitedOn}
        dt Roles
        dd #{user.roles}
        dt Notice
        dd
          form.form-inline
            label.checkbox
              if (user.subscribe)
                input#sub(type='checkbox', checked)
              else
                input#sub(type='checkbox')
              | subscribe &nbsp
            button#modify.btn(type='submit') Modify

block js
  script(type='text/javascript', src='#{prefix}/jquery/jquery.js')
  script(type='text/javascript', src='#{prefix}/bootstrap/dist/js/bootstrap.js')
  script(type='text/javascript', src='#{prefix}/dependencies/moment.js')
  script(type='text/javascript', src='#{prefix}/javascripts/profile.js')
