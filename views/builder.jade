extends layout

block head
  meta(charset='urf-8')
  if (typeof id == 'undefined')
    title FRIB Traveler :: new form
  else
    title FRIB Traveler :: forms :: #{id}
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='#{prefix}/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href='#{prefix}/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='#{prefix}/jquery/ui-lightness/jquery-ui-1.10.2.custom.css')
  link(rel='stylesheet', href='#{prefix}/font-awesome-4.0.3/css/font-awesome.css')
  link(rel='stylesheet', href='#{prefix}/stylesheets/style.css')

block content
  script.
    var prefix = '!{prefix}';
  .container
    #message
    #modal.modal.hide.fade(tabindex='-1',role='dialog',data-backdrop='static',aria-labelledby='modalLabel',aria-hidden='true')
      .modal-header
        h3#modalLabel
      .modal-body
      .modal-footer
    h3#formtitle #{title}
    .well-large
      form.form-horizontal#output
        != html

    .btn-group.dropdown
      a.btn.dropdown-toggle(data-toggle='dropdown')#input-items Basic inputs
        span.caret
      ul.dropdown-menu
        li#add-checkbox
          a Checkbox
        li#add-text
          a Text
        li#add-figure
          a Figure
        li#add-par
          a Paragraph
        li#add-number
          a Number
        li#add-file
          a Upload file
        li#add-other
          a other types
    .btn-group.dropdown
      a.btn.dropdown-toggle(data-toggle='dropdown')#struct-items Advanced control
        span.caret
      ul.dropdown-menu
        //- li#add-grid
        //-   a Grid
        li#add-section
          a Section
        li#add-rich
          a Rich instruction
    .btn-group
      button.btn#adjust Adjust location
    .btn-group
      button.btn.btn-primary#save Save
    .btn-group
      a.btn#preview(data-toggle='tooltip', title='the form needs be saved first', href='preview', target='_blank') Preview
    .btn-group
      a.btn.dropdown-toggle(data-toggle='dropdown')#more
        | More
        span.caret
      ul.dropdown-menu
        li
          a#saveas Save as
        li
          a#rename Rename
        li
          a#share(data-toggle='tooltip', title='the form needs be saved first', href='share', target='_blank') Share
  br
  br
  br
  br
  br
  br
  br
  br
  br
  br

block js
  script(type='text/javascript', src='#{prefix}/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src='#{prefix}/jquery/jquery-ui-1.10.2.custom.js')
  script(type='text/javascript', src='#{prefix}/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src='#{prefix}/rivets/rivets.min.js')
  script(type='text/javascript', src='#{prefix}/tinymce/tinymce.min.js')
  script(type='text/javascript', src='#{prefix}/tinymce/jquery.tinymce.min.js')
  script(type='text/javascript', src='#{prefix}/dependencies/moment.js')
  script(type='text/javascript', src='#{prefix}/dependencies/livestamp.js')
  script(type='text/javascript', src='#{prefix}/builder/input.js')
  script(type='text/javascript', src='#{prefix}/builder/spec.js')
  script(type='text/javascript', src='#{prefix}/javascripts/uid.js')
  // script(type='text/javascript', src='#{prefix}/javascripts/proxiedajax.js')
  script(type='text/javascript', src='#{prefix}/javascripts/builder.js')
