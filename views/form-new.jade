extends layout

block head
  meta(charset='urf-8')
  title FRIB Traveler - new form
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='#{prefix}/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet', href='#{prefix}/stylesheets/style.css')

block content
  .container(style="margin-top: 10px")
    form.form-horizontal(name='newform', action='./', method='POST')
      .form-group
        label.col-sm-2.control-label Form title
        .col-sm-3
          input.form-control(type='text', name='title', required)
      .form-group
        .col-sm-offset-2.col-sm-10
          .btn-group
            button.btn.btn-primary(type='submit') Confirm
          != ' '
          .btn-group
            button.btn(onclick='window.open("", "_self", ""); window.close(); return false;') Cancel


block js
  script(type='text/javascript', src='#{prefix}/jquery/jquery.js')
  script(type='text/javascript', src='#{prefix}/jquery-ui/ui/jquery-ui.custom.js')
  script(type='text/javascript', src='#{prefix}/bootstrap/dist/js/bootstrap.js')
