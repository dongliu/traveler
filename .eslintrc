{
  "root": true,
  "env": {
    "browser": true,
    "jquery": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },

  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "no-console": 0,
    "quotes": [2, "single", "avoid-escape"],
    "camelcase": 0,
    "max-statements": 0,
    "func-style": 0,
    "max-len": 0,
    "max-params": [2, 10],
    "operator-assignment": 0,
    "consistent-this": 0,
    "no-unused-expressions": 1,
    "no-underscore-dangle": 1,
    "no-use-before-define": 1,
    "no-unused-vars": 1,
    "no-param-reassign": 1,
    "no-prototype-builtins": 1,
    "no-continue": 1
  }
}
